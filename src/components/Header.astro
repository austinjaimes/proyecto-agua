<!-- Menú móvil completo -->
<div class="mobile-menu">
  <div class="close-btn">✕</div>
  <ul>
    <li><a href="/">Inicio</a></li>
    <li><a href="#problema">Problema</a></li>
    <li><a href="#soluciones">Soluciones</a></li>
    <li><a href="#blogs">Blogs</a></li>
    <li><a href="#simulador">Simulador</a></li>
    <li><a href="#contacto">Contacto</a></li>
  </ul>
</div>

<style>
  /* Navbar principal */
  .navbar {
    background: #132e49;
    color: white;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    height: 50px;
    width: auto;
  }

  nav {
    display: flex;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    font-weight: 500;
    color: white;
    transition: color 0.3s ease;
    font-size: 1.1rem;
  }

  .nav-links a:hover {
    color: #4DD0E1;
  }

  /* Menu toggle para móviles */
  .menu-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 5px;
  }

  .menu-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background: white;
    border-radius: 2px;
  }

  /* Menú móvil */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100%;
    background: #0A2342;
    z-index: 2000;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 3rem 2rem;
    transition: right 0.4s ease;
    overflow: hidden;
  }

  .mobile-menu.active {
    display: flex;
    right: 0;
  }

  .mobile-menu .close-btn {
    font-size: 2rem;
    color: white;
    cursor: pointer;
    position: absolute;
    top: 20px;
    right: 20px;
  }

  /* Centrar links */
  .mobile-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    width: 100%;
    justify-content: center;
    align-items: center;
  }

  .mobile-menu ul li a {
    color: white;
    font-size: 2rem;
    text-decoration: none;
    transition: color 0.3s;
  }

  .mobile-menu ul li a:hover {
    color: #4DD0E1;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    .menu-toggle {
      display: flex;
    }
    .logo {
      height: 40px;
    }
  }

  /* Evitar scroll en body cuando menú abierto */
  body.menu-open {
    overflow: hidden;
  }
</style>

<script is:inline>
  const toggle = document.querySelector('.menu-toggle');
  const mobileMenu = document.querySelector('.mobile-menu');
  const closeBtn = document.querySelector('.mobile-menu .close-btn');

  toggle?.addEventListener('click', () => {
    mobileMenu.classList.add('active');
    document.body.classList.add('menu-open');
  });

  closeBtn?.addEventListener('click', () => {
    mobileMenu.classList.remove('active');
    document.body.classList.remove('menu-open');
  });

  // Cerrar al hacer click en un link
  document.querySelectorAll('.mobile-menu ul li a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.remove('active');
      document.body.classList.remove('menu-open');
    });
  });
</script>
